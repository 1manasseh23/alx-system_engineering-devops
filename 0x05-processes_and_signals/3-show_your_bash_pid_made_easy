#!/usr/bin/env bash
# This is a script that displays the PID, along with the process name, of processes whose name contain the word bash

process_dir="/proc/[0-9]*"

for pid_dir in $process_dir; do
	pid=$(basename "$pid_dir")
	if [[ -f "$pid_dir/cmdline" ]]; then
		process_name=$(tr '\0' ' ' < "$pid_dir/cmdline" | awk '{print $1}')
		if [[ "$process_name" == *"bash"* ]]; then
			echo "$pid $process_name"
		fi
        fi
done
